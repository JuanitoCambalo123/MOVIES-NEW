@model BSIT3L_Movies.Models.MovieViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Movie Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            text-align: center;
        }

        h2 {
            color: #333;
        }

        p {
            font-size: 18px;
            margin: 10px 0;
        }

            p strong {
                font-weight: bold;
            }

            p span {
                color: #007bff;
            }
    </style>
</head>
<body>
    <h2>Movie Details</h2>
    <p><strong>Movie ID:</strong> <span>@Model.Id</span></p>
    <p><strong>Movie Name:</strong> <span>@Model.Name</span></p>
    <p><strong>Rating:</strong> <span>@Model.Rating</span></p>
    <p><strong>Release Year:</strong> <span>@Model.ReleaseYear</span></p>
    <p><strong>Genre:</strong> <span>@Model.Genre</span></p>
</body>
</html>
    